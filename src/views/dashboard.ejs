<div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Welcome, <%= user.name %></h1>
        <a href="/payment/top-up" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
            Top Up Balance
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- API Usage Stats -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <h2 class="text-lg font-semibold text-gray-900 mb-2">API Usage</h2>
            <p class="text-gray-600">Requests this month: 0</p>
            <p class="text-gray-600">Remaining quota: 1000</p>
        </div>

        <!-- Balance -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <h2 class="text-lg font-semibold text-gray-900 mb-2">Balance</h2>
            <p class="text-gray-600">Current balance: $0.00</p>
            <p class="text-gray-600">Last top-up: Never</p>
        </div>

        <!-- Recent Activity -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <h2 class="text-lg font-semibold text-gray-900 mb-2">Recent Activity</h2>
            <p class="text-gray-600">No recent activity</p>
        </div>
    </div>
</div> 